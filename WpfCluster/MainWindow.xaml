<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="WpfCluster.MainWindow"
        Title="" Height="500" Width="800" FontFamily="Jing Jing" Background="WhiteSmoke" MouseMove="Window_MouseMove" MouseWheel="Window_MouseWheel" MouseLeftButtonDown="Window_MouseLeftButtonDown" MouseRightButtonDown="Window_MouseRightButtonDown" Icon="icon.ico">
    <Grid x:Name="mainGrid">
        <TabControl FontFamily="Jing Jing" Margin="10" Background="#FFF9F9F9" HorizontalContentAlignment="Center">
            <TabItem Header="Clusters">
                <Grid x:Name="firstPageGrid" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.55*"/>
                        <RowDefinition Height="1.45*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <DockPanel Grid.Column="0">
                        <StackPanel>
                            <Label Content="Grid (matrix) size"/>
                            <TextBox x:Name="gridSize" HorizontalAlignment="Left" TextWrapping="Wrap" Text="20" MaxLength="3"/>
                            <Label Content="Grid cells probability"/>
                            <TextBox x:Name="probability" HorizontalAlignment="Left" TextWrapping="Wrap" Text="0,58" MaxLength="5"/>
                        </StackPanel>
                        <StackPanel>
                            <CheckBox x:Name="showClusterCount" Content="Show Cluster Count"/>
                        </StackPanel>
                        <StackPanel>
                            <Button x:Name="drawButton" Content="Draw" VerticalAlignment="Center" Margin="0,5,0,0" Click="drawButton_Click" HorizontalAlignment="Center"/>
                            <Button x:Name="fillButton" Content="Fill" VerticalAlignment="Center" Margin="0,5,0,0" Click="fillButton_Click" HorizontalAlignment="Center"/>
                            <Button x:Name="clearButton" Content="Clear" VerticalAlignment="Center" Margin="0,5,0,0" Click="clearButton_Click" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </DockPanel>
                    <DockPanel Grid.Column="1">
                        <StackPanel>
                            <Label Content="Cube (matrix) size" FontWeight="Thin" Grid.Column="1"/>
                            <TextBox x:Name="cubeSize" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="6" MaxLength="2"/>
                            <Label Content="Cube cells probability" Height="30" Grid.Column="1"/>
                            <TextBox x:Name="cubeProbability" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="0,58" MaxLength="5"/>
                        </StackPanel>
                        <StackPanel>
                            <Button x:Name="drawCubeButton" Content="Draw" VerticalAlignment="Center" Margin="0,5,0,0" Click="drawCubeButton_Click" HorizontalAlignment="Center"/>
                            <Button x:Name="fillCubeButton" Content="Fill" VerticalAlignment="Center" Margin="0,5,0,0" Click="fillCubeButton_Click" HorizontalAlignment="Center"/>
                            <Button x:Name="clearCubeButton" Content="Clear" VerticalAlignment="Center" Margin="0,5,0,0" Click="clearCubeButton_Click" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </DockPanel>
                    <Viewbox Grid.Row="1" Grid.Column="0" >
                        <Canvas x:Name="canvasField" Width="500" Height="500">
                        </Canvas>
                    </Viewbox>
                    <Viewport3D x:Name="viewportField" ClipToBounds="True" Grid.Column="1" Grid.Row="1">
                        <Viewport3D.Camera>
                            <PerspectiveCamera x:Name="mainCamera" UpDirection="0,1,0" FarPlaneDistance="150" NearPlaneDistance="1" FieldOfView="100" >
                                <PerspectiveCamera.Transform>
                                    <Transform3DGroup>
                                        <RotateTransform3D>
                                            <RotateTransform3D.Rotation>
                                                <AxisAngleRotation3D x:Name="rotY" Axis="0 1 0" Angle="0" />
                                            </RotateTransform3D.Rotation>
                                        </RotateTransform3D>
                                        <RotateTransform3D>
                                            <RotateTransform3D.Rotation>
                                                <AxisAngleRotation3D x:Name="rotX" Axis="1 0 0" Angle="0" />
                                            </RotateTransform3D.Rotation>
                                        </RotateTransform3D>
                                        <RotateTransform3D>
                                            <RotateTransform3D.Rotation>
                                                <AxisAngleRotation3D x:Name="rotZ" Axis="0 0 1" Angle="0" />
                                            </RotateTransform3D.Rotation>
                                        </RotateTransform3D>
                                    </Transform3DGroup>
                                </PerspectiveCamera.Transform>
                            </PerspectiveCamera>
                        </Viewport3D.Camera>
                    </Viewport3D>
                </Grid>
            </TabItem>
            <TabItem Header="Diagram">
                <Grid x:Name="secondPageGrid" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.2*"/>
                        <RowDefinition Height="1.8*"/>
                    </Grid.RowDefinitions>
                    <DockPanel Grid.Row="0">
                        <StackPanel>
                            <Button x:Name="drawGraphic" Content="Draw" VerticalAlignment="Center" Margin="0,5,0,0" Click="drawGraphic_Click" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </DockPanel>
                    <Viewbox Grid.Row="1">
                        <Canvas x:Name="graphicCanvasField" Width="500" Height="500">
                        </Canvas>
                    </Viewbox>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
